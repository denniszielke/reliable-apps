{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    // https://docs.dapr.io/operations/hosting/self-hosted/self-hosted-no-docker/
    "version": "0.2.0",
    "compounds": [
        {
            "name": "All",
            "configurations": [ "Creator", "Receiver", "Sink"],
            "stopAll": true
        }
    ],
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Creator",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/message-creator/app/app.js",
            "envFile": "${workspaceFolder}/local.env",
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(http?://\\S+)"
            },
        },        
        {
            "name": "Receiver",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-receiver",
            "program": "${workspaceFolder}/src/Message.Receiver/bin/Debug/net6.0/Message.Receiver.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Message.Receiver",
            "stopAtEntry": false,
            "envFile": "${workspaceFolder}/local.env",
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(http?://\\S+)"
            },
        },
        {
            "name": "Sink",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-sink",
            "program": "${workspaceFolder}/src/Message.Sink/bin/Debug/net6.0/Message.Sink.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Message.Sink",
            "stopAtEntry": false,
            "envFile": "${workspaceFolder}/local.env",
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(http?://\\S+)"
            },
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}