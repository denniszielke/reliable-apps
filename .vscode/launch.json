{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    // https://docs.dapr.io/operations/hosting/self-hosted/self-hosted-no-docker/
    "version": "0.2.0",
    "compounds": [
        {
            "name": "All",
            "configurations": [
                "Message.Creator",
                "Contonance.WebPortal",
                "Contonance.Backend",
                "EnterpriseWarehouse.Backend"
            ],
            "stopAll": true
        }
    ],
    "configurations": [
        {
            "name": "Message.Creator",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-creator",
            "program": "${workspaceFolder}/src/Message.Creator/bin/Debug/net6.0/Message.Creator.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Message.Creator",
            "stopAtEntry": false,
            "envFile": "${workspaceFolder}/local.env",
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(http?://\\S+)"
            },
        },
        {
            "name": "Contonance.WebPortal",
            "type": "blazorwasm",
            "request": "launch",
            "preLaunchTask": "build-contonance-webportal",
            "cwd": "${workspaceFolder}/src/Contonance.WebPortal/Server",
            "envFile": "${workspaceFolder}/local.env",
            "url": "https://localhost:7217",
            "browser": "edge"
        },
        {
            "name": "Contonance.Backend",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-contonance-backend",
            "program": "${workspaceFolder}/src/Contonance.Backend/bin/Debug/net6.0/Contonance.Backend.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Contonance.Backend",
            "stopAtEntry": false,
            "envFile": "${workspaceFolder}/local.env"
        },
        {
            "name": "EnterpriseWarehouse.Backend",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-enterprise-warehouse",
            "program": "${workspaceFolder}/src/EnterpriseWarehouse.Backend/bin/Debug/net6.0/EnterpriseWarehouse.Backend.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/EnterpriseWarehouse.Backend",
            "stopAtEntry": false,
            "envFile": "${workspaceFolder}/local.env"
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}